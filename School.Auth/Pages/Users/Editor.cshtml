@page "{id}"
@model School.Auth.Pages.Users.EditorModel
@{
    ViewData["Title"] = Model.UserName;
}

<div class="container">
    <h2 class="bg-primary text-center text-white p-1 mb-2">Редактирование пользователя: @ViewData["Title"]</h2>

    <form method="post">
        <div asp-validation-summary="All" class="text-danger"></div>

        <input name="Id" type="hidden" value="@Model.Id" />

        <div class="form-group mt-3">
            <label asp-for="UserName">Имя пользователя</label>
            <input asp-for="UserName" class="form-control" value="@Model.UserName" />
        </div>

        <div class="form-group mt-3">
            <label asp-for="Email">Email</label>
            <input type="email" asp-for="Email" class="form-control" value="@Model.Email" />
        </div>

        <div class="form-group mt-3">
            <label asp-for="Phone">
                Номер телефона
                <small>Format: +79991112233</small>
            </label>
            <input type="tel" asp-for="Phone" class="form-control" value="@Model.Phone" pattern="\+7\d{10}" />
        </div>

        <div class="form-group mt-3">
            <label asp-for="Password">Новый пароль (при необходимости)</label>
            <input type="password" asp-for="Password" class="form-control" value="@Model.Password" />
        </div>

        <div class="form-group mt-3">
            <label asp-for="ConfirmPassword">Подтверждение нового пароля (при необходимости)</label>
            <input type="password" asp-for="ConfirmPassword" class="form-control" value="@Model.Password" />
        </div>

        <div class="container-fluid text-center mt-4 mb-5">
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Сохранить</button>
                <a class="btn btn-secondary" asp-page="List">Назад</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}